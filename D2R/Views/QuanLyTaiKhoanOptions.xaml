<UserControl x:Class="D2R.Views.QuanLyTaiKhoanNguoiDungOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="White"
      d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Màu sắc -->
        <Color x:Key="PrimaryBloodRed">#8B0000</Color>
        <Color x:Key="DarkBloodRed">#660000</Color>
        <Color x:Key="LightBloodRed">#A52A2A</Color>
        <Color x:Key="VeryLightBloodRed">#FFE4E1</Color>

        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="{StaticResource PrimaryBloodRed}"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="{StaticResource DarkBloodRed}"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="{StaticResource LightBloodRed}"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="{StaticResource VeryLightBloodRed}"/>

        <!-- Style cho nút thông thường -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#33000000"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource LightBloodRedBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource VeryLightBloodRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút icon -->
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="25"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#33000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource LightBloodRedBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource VeryLightBloodRedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBloodRedBrush}" Height="80" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <materialDesign:PackIcon Kind="AccountMultiple" Foreground="White" Width="40" Height="40" Margin="0,0,15,0"/>
                <TextBlock Text="LỰA CHỌN QUẢN LÝ TÀI KHOẢN NGƯỜI DÙNG" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Chọn thao tác:" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBloodRedBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button Content="XEM DANH SÁCH" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Click="ViewList_Click" Width="300" Height="100"/>
                <Button Content="CHỈNH SỬA TÀI KHOẢN" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Click="EditUser_Click" Height="100" Width="300"/>
                <Button Content="THÊM TÀI KHOẢN" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Click="AddUser_Click" Width="300" Height="100"/>
                <Button Content="XÓA TÀI KHOẢN" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Click="DeleteUser_Click" Height="100" Width="300"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Height="60" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- Nút Quay Lại (Icon) -->
                <Button Style="{StaticResource IconButtonStyle}"
                        ToolTip="Quay lại"
                        Click="BackButton_Click">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                </Button>
                <!-- Nút Tiếp Theo (Icon) -->
                <Button x:Name="NextButton" 
                        Style="{StaticResource IconButtonStyle}"
                        ToolTip="Tiếp theo"
                        IsEnabled="False"
                        Click="NextButton_Click">
                    <materialDesign:PackIcon Kind="ArrowRight" Width="24" Height="24"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>