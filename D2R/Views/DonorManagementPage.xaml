<Page x:Class="D2R.Views.DonorManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Quản Lý Mạnh Thường Quân" Width="1920" Height="1025"
      Background="#FFE4E1">
    <!-- Very light blood red background -->

    <Page.Resources>
        <!-- Blood Red Color Resources -->
        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="#8B0000"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="#660000"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="#A52A2A"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="#FFE4E1"/>
    </Page.Resources>

    <Grid>
        <!-- Layout with 2 rows: Header and Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Background="{StaticResource PrimaryBloodRedBrush}" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="/D2R_Logo.png"
                   Height="40"
                   VerticalAlignment="Center"
                   Margin="10,0"
                   Grid.Column="0"/>

            <!-- Title -->
            <TextBlock Grid.Column="1" 
                       Text="QUẢN LÝ MẠNH THƯỜNG QUÂN" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       FontFamily="Segoe UI"/>

            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button Style="{StaticResource MaterialDesignToolButton}" Click="MinimizeButton_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16" Foreground="White"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignToolButton}" Click="MaximizeButton_Click">
                    <materialDesign:PackIcon Kind="WindowMaximize" Width="16" Height="16" Foreground="White"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignToolButton}" Click="CloseButton_Click">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="White"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Search bar + buttons -->
                <RowDefinition Height="*"/>
                <!-- Donor list -->
            </Grid.RowDefinitions>

            <!-- SEARCH BAR -->
            <DockPanel Grid.Row="0" Margin="0,10,0,10">
                <TextBox Width="250"
                         Margin="0,0,10,0"
                         materialDesign:HintAssist.Hint="Tìm kiếm theo tên"
                         VerticalAlignment="Center"/>
                <Button Content="Tìm kiếm"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource PrimaryBloodRedBrush}"
                        Foreground="White"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"/>
                <DockPanel DockPanel.Dock="Right">
                    <Button Content="Thêm Mới"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource PrimaryBloodRedBrush}"
                            Foreground="White"
                            Margin="10,0"
                            Click="AddNewButton_Click"/>
                </DockPanel>
            </DockPanel>

            <!-- DONOR LIST -->
            <DataGrid Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowHeaderWidth="0"
                      IsReadOnly="True"
                      Margin="0,0,0,10"
                      SelectionMode="Single"
                      Background="White"
                      AlternatingRowBackground="#F5F5F5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Phone}" Width="*"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="2*"/>
                    <DataGridTextColumn Header="Ngày tham gia" Binding="{Binding JoinDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>