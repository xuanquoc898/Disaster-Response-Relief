<UserControl x:Class="D2R.Views.AdminUserManagermentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="White"
      d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Màu sắc -->
        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="#8B0000"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="#660000"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="#A52A2A"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="#FFE4E1"/>

        <!-- Input Field Style -->
        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightBloodRedBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="materialDesign:HintAssist.HintOpacity" Value="0.6"/>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="FormPasswordInputStyle" TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightBloodRedBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="materialDesign:HintAssist.HintOpacity" Value="0.6"/>
        </Style>

        <!-- Form Label Style -->
        <Style x:Key="FormLabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="AccountDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="ColumnHeaderHeight" Value="40"/>
            <Setter Property="RowHeight" Value="40"/>
        </Style>

        <!-- DataGridColumnHeader Style -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource VeryLightBloodRedBrush}" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <!-- Form nhập thông tin -->
            <ColumnDefinition Width="2*"/>
            <!-- Danh sách tài khoản -->
        </Grid.ColumnDefinitions>

        <!-- Add Account Form -->
        <Border Grid.Column="0" 
                CornerRadius="5" 
                Background="White" 
                BorderBrush="{StaticResource LightBloodRedBrush}"
                BorderThickness="1"
                Padding="20"
                Margin="0,0,10,0"
                Effect="{StaticResource MaterialDesignShadowDepth1}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Thêm Tài Khoản Người Dùng"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Background="{StaticResource PrimaryBloodRedBrush}"
                           Margin="0,0,0,15"
                           Padding="10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Username -->
                    <Label Content="Tên tài khoản:" Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtUsername" Grid.Row="0" Grid.Column="1" Style="{StaticResource FormInputStyle}"
                             materialDesign:HintAssist.Hint="Nhập tên tài khoản"/>

                    <!-- Email -->
                    <Label Content="Email:" Grid.Row="1" Grid.Column="0" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Style="{StaticResource FormInputStyle}"
                             materialDesign:HintAssist.Hint="Nhập địa chỉ email"/>

                    <!-- Password -->
                    <Label Content="Mật khẩu:" Grid.Row="2" Grid.Column="0" Style="{StaticResource FormLabelStyle}"/>
                    <PasswordBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1" Style="{StaticResource FormPasswordInputStyle}"
                                 materialDesign:HintAssist.Hint="Nhập mật khẩu"/>
                </Grid>

                <Button Content="Thêm Tài Khoản"
                        Click="AddAccount_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Account List -->
        <Border Grid.Column="1" 
                CornerRadius="5" 
                Background="White" 
                BorderBrush="{StaticResource LightBloodRedBrush}"
                BorderThickness="1"
                Padding="20"
                Margin="10,0,0,0">
            <StackPanel>
                <TextBlock Text="Danh Sách Tài Khoản Đã Thêm"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBloodRedBrush}"
                           Margin="0,0,0,15"/>

                <DataGrid x:Name="dgAccounts"
                          Style="{StaticResource AccountDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên tài khoản" Binding="{Binding TenTaiKhoan}" Width="2*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="3*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>