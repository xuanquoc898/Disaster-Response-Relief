<Page x:Class="D2R.Views.CreateReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Tạo Báo Cáo Mới"
      Background="White"
      d:DesignHeight="800" d:DesignWidth="1200">

    <Page.Resources>
        <!-- Màu sắc -->
        <Color x:Key="PrimaryBloodRed">#8B0000</Color>
        <Color x:Key="DarkBloodRed">#660000</Color>
        <Color x:Key="LightBloodRed">#A52A2A</Color>
        <Color x:Key="VeryLightBloodRed">#FFE4E1</Color>
        <Color x:Key="FooterPink">#FFDAD4</Color>

        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="{StaticResource PrimaryBloodRed}"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="{StaticResource DarkBloodRed}"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="{StaticResource LightBloodRed}"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="{StaticResource VeryLightBloodRed}"/>
        <SolidColorBrush x:Key="FooterPinkBrush" Color="{StaticResource FooterPink}"/>

        <!-- Style cho các control -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>

        <Style x:Key="SettingItemStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>

        <Style x:Key="SettingLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0 0 0 2"/>
        </Style>

        <Style x:Key="SettingComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>

        <Style x:Key="SettingCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBloodRedBrush}" Height="80">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <materialDesign:PackIcon Kind="FileChart" Foreground="White" Width="32" Height="32" Margin="0,0,15,0"/>
                <TextBlock Text="TẠO BÁO CÁO MỚI" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Form tạo báo cáo -->
                <StackPanel Grid.Column="0" Margin="10,20,20,0">
                    <TextBlock Text="THÔNG TIN BÁO CÁO" 
                               Foreground="{StaticResource PrimaryBloodRedBrush}"
                               FontWeight="Bold"
                               FontSize="18"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Loại báo cáo:" Margin="0,0,0,5" FontWeight="DemiBold"/>
                    <ComboBox SelectedIndex="0" Margin="0,0,0,15" FontStyle="Italic">
                        <ComboBoxItem Content="Doanh thu"/>
                        <ComboBoxItem Content="Tồn kho"/>
                        <ComboBoxItem Content="Khách hàng"/>
                        <ComboBoxItem Content="Tùy chỉnh"/>
                    </ComboBox>

                    <TextBlock Text="Tên báo cáo:" Margin="0,0,0,5" FontWeight="DemiBold"/>
                    <TextBox Margin="0,0,0,15"/>

                    <TextBlock Text="Khoảng thời gian:" Margin="0,0,0,5" FontWeight="DemiBold"/>
                    <DatePicker Margin="0,0,0,5"/>
                    <DatePicker Margin="0,0,0,15"/>

                    <TextBlock Text="Nhóm theo:" Margin="0,0,0,5" FontWeight="DemiBold" />
                    <ComboBox SelectedIndex="0" Margin="0,0,0,15" FontStyle="Italic">
                        <ComboBoxItem Content="Ngày"/>
                        <ComboBoxItem Content="Tuần"/>
                        <ComboBoxItem Content="Tháng"/>
                        <ComboBoxItem Content="Quý"/>
                        <ComboBoxItem Content="Năm"/>
                    </ComboBox>

                    <CheckBox Content="Bao gồm biểu đồ" IsChecked="True" Margin="0,0,0,15"/>
                    <CheckBox Content="Tự động lưu mẫu" Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Xem trước -->
                <Border Grid.Column="1" BorderBrush="{StaticResource PrimaryBloodRedBrush}" BorderThickness="1" CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="XEM TRƯỚC BÁO CÁO" 
                                   Foreground="{StaticResource PrimaryBloodRedBrush}"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Margin="0,20,0,15"
                                   HorizontalAlignment="Center"/>

                        <Border BorderBrush="LightGray" BorderThickness="1" Background="White" Padding="20">
                            <StackPanel>
                                <TextBlock Text="BÁO CÁO DOANH THU" 
                                           FontWeight="Bold"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>

                                <!-- Placeholder cho báo cáo -->
                                <Border Height="300" Background="#F5F5F5" CornerRadius="4">
                                    <TextBlock Text="Xem trước báo cáo sẽ hiển thị ở đây" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="Gray"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource VeryLightBloodRedBrush}" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="HỦY BỎ" Style="{StaticResource ActionButtonStyle}" Click="CancelButton_Click"/>
                <Button Content="TẠO BÁO CÁO" Style="{StaticResource ActionButtonStyle}" Margin="15,0,0,0" Click="CreateButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>