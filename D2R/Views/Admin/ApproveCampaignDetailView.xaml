<UserControl x:Class="D2R.Views.Admin.ApproveCampaignDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="800"
             Background="White">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#F9F9F9"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0 0 0 20">

            <StackPanel>
                <TextBlock x:Name="CampaignNoteText" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <TextBlock Text="🌪 Loại thiên tai: " FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock x:Name="DisasterTypeText" FontSize="14" Foreground="#222"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBlock Text="⚠️ Mức độ thiên tai: " FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock x:Name="DisasterLevelText" FontSize="14" Foreground="#222"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="CategoryPanel" />
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Grid.Row="2"
                    Margin="0 20 0 0">

            <Button Content="✅ Phân phối" 
                    Click="Approve_Click" 
                    Background="#4CAF50" 
                    Foreground="White"
                    Padding="10 5"
                    Width="110"
                    Margin="5"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    />

            <Button Content="❌ Từ chối" 
                    Click="Reject_Click" 
                    Background="#F44336" 
                    Foreground="White"
                    Padding="10 5"
                    Width="100"
                    Margin="5"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    />

        </StackPanel>
    </Grid>
</UserControl>
