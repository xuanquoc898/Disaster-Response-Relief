<UserControl x:Class="D2R.Views.DistributionManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="White"
      d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Màu sắc -->
        <Color x:Key="PrimaryBloodRed">#8B0000</Color>
        <Color x:Key="DarkBloodRed">#660000</Color>
        <Color x:Key="LightBloodRed">#A52A2A</Color>
        <Color x:Key="VeryLightBloodRed">#FFE4E1</Color>

        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="{StaticResource PrimaryBloodRed}"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="{StaticResource DarkBloodRed}"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="{StaticResource LightBloodRed}"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="{StaticResource VeryLightBloodRed}"/>

        <!-- Style cho nút thông thường -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#33000000"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource LightBloodRedBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource VeryLightBloodRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút icon -->
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="25"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#33000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource LightBloodRedBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource VeryLightBloodRedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho GroupBox -->
        <Style x:Key="CustomGroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignGroupBox}">
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" 
                                    Background="{StaticResource PrimaryBloodRedBrush}" 
                                    CornerRadius="4,4,0,0" 
                                    Padding="5">
                                <TextBlock Text="{TemplateBinding Header}" 
                                           Foreground="White" 
                                           FontWeight="Bold" 
                                           FontSize="14"/>
                            </Border>
                            <Border Grid.Row="1" 
                                    BorderBrush="{StaticResource PrimaryBloodRedBrush}" 
                                    BorderThickness="1,0,1,1" 
                                    CornerRadius="0,0,4,4" 
                                    Background="{StaticResource VeryLightBloodRedBrush}">
                                <ContentPresenter Margin="10"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBloodRedBrush}" Height="80" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <materialDesign:PackIcon Kind="TruckDelivery" Foreground="White" Width="40" Height="40" Margin="0,0,15,0"/>
                <TextBlock Text="PHÂN PHỐI HÀNG HÓA CỨU TRỢ" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Danh sách phân phối -->
            <GroupBox Header="Danh Sách Đợt Phân Phối" Style="{StaticResource CustomGroupBoxStyle}">
                <DataGrid x:Name="DistributionGrid" 
                          ItemsSource="{Binding Distributions}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          Margin="10"
                          BorderBrush="{StaticResource PrimaryBloodRedBrush}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã PP" Binding="{Binding DistributionCode}" Width="100"/>
                        <DataGridTextColumn Header="Ngày xuất" Binding="{Binding DistributionDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                        <DataGridTextColumn Header="Khu vực" Binding="{Binding Area}" Width="100"/>
                        <DataGridTextColumn Header="Địa điểm" Binding="{Binding Location}" Width="100"/>
                        <DataGridTextColumn Header="Số hộ" Binding="{Binding HouseholdCount}" Width="100"/>
                        <DataGridTextColumn Header="Tổng hàng" Binding="{Binding TotalItems}" Width="120"/>
                        <DataGridTextColumn Header="Phụ trách" Binding="{Binding ResponsiblePerson}" Width="120"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Control Panel -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0" Width="250">
                <Button Content="TẠO ĐỢT PHÂN PHỐI" 
                        Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding CreateDistributionCommand}"
                        Click="CreateDistribution_Click"/>
                <Button Content="CHI TIẾT PHÂN PHỐI" 
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,10,0,0"
                        Command="{Binding ViewDetailsCommand}"
                        Click="ViewDetails_Click"/>
                <Button Content="CẬP NHẬT TRẠNG THÁI" 
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,10,0,0"
                        Command="{Binding UpdateStatusCommand}"
                        Click="UpdateStatus_Click"/>
                <Button Content="XUẤT KHO PHÂN PHỐI" 
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,10,0,0"
                        Command="{Binding ExportForDistributionCommand}"
                        Click="ExportForDistribution_Click"/>
                <Button Content="THÊM HỘ NHẬN" 
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,10,0,0"
                        Command="{Binding AddRecipientCommand}"
                        Click="AddRecipient_Click"/>
                <Button Content="IN PHIẾU PHÂN PHỐI" 
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,10,0,0"
                        Command="{Binding PrintDistributionFormCommand}"
                        Click="PrintDistributionForm_Click"/>
                <Button Content="BÁO CÁO PHÂN PHỐI" 
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,10,0,0"
                        Command="{Binding GenerateReportCommand}"
                        Click="GenerateReport_Click"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Height="60" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- Nút Quay Lại (Icon) -->
                <Button Style="{StaticResource IconButtonStyle}"
                        ToolTip="Quay lại"
                        Click="BackButton_Click">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                </Button>
                <!-- Nút Tiếp Theo (Icon) -->
                <Button x:Name="NextButton" 
                        Style="{StaticResource IconButtonStyle}"
                        ToolTip="Tiếp theo"
                        IsEnabled="False"
                        Click="NextButton_Click">
                    <materialDesign:PackIcon Kind="ArrowRight" Width="24" Height="24"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>