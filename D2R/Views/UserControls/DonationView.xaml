<UserControl x:Class="D2R.Views.UserControls.DonationAdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:D2R.Views.UserControls"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
        <StackPanel Margin="20" x:Name="RootPanel">
            <TextBlock Text="Chọn mạnh thường quân" FontWeight="Bold" Margin="0 0 0 5"/>
            <TextBox x:Name="SearchBox" Width="300" Height="30" Margin="0 0 0 5" TextChanged="SearchBox_TextChanged"/>
            <ListBox x:Name="DonorListBox"
         Width="300"
         Height="100"
         Margin="0 0 0 10"
         DisplayMemberPath="FullName"
         SelectionChanged="DonorListBox_SelectionChanged"/>
            <ItemsControl x:Name="CategoryGroupsPanel" Margin="0 0 0 10"/>
            <Button Content="+ Thêm danh mục"
                    Width="150"
                    Margin="0 0 0 10"
                    Click="AddCategory_Click"/>
            <Button Content="Xác nhận ủng hộ"
                    Width="200"
                    Height="40"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Confirm_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
