<UserControl x:Class="D2R.Views.Admin.ApproveCampaignDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="800"
             Background="White">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#F9F9F9"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0 0 0 20">

            <StackPanel>
                <TextBlock x:Name="CampaignNoteText" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <TextBlock Text="🌪 Loại thiên tai: " FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock x:Name="DisasterTypeText" FontSize="14" Foreground="#222"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBlock Text="⚠️ Mức độ thiên tai: " FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock x:Name="DisasterLevelText" FontSize="14" Foreground="#222"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="CategoryPanel" />
        </ScrollViewer>

        <!-- Footer: Hành động xử lý -->
        <Border Grid.Row="2" Padding="15" Background="#FAFAFA" CornerRadius="6" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>

                <!-- Nút phân phối và từ chối -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" x:Name="ButtonPanel">
                    <Button x:Name="ApproveButton"
                    Content="✅ Phân phối" 
                    Click="Approve_Click" 
                    Background="#4CAF50" 
                    Foreground="White"
                    Padding="10 5"
                    Width="120"
                    Margin="5"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>

                    <Button x:Name="RejectButton"
                    Content="❌ Từ chối" 
                    Click="Reject_Click" 
                    Background="#F44336" 
                    Foreground="White"
                    Padding="10 5"
                    Width="120"
                    Margin="5"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Lý do từ chối -->
                <StackPanel x:Name="RejectSection" Visibility="Collapsed" Margin="0,15,0,0">
                    <TextBlock Text="📝 Nhập lý do từ chối:" 
                       FontWeight="SemiBold" 
                       Foreground="#D32F2F"
                       Margin="0,0,0,5"/>
                    <TextBox x:Name="RejectReasonBox"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     BorderBrush="Gray" 
                     BorderThickness="1"
                     Padding="8"
                     FontSize="14"/>

                    <Button x:Name="ConfirmRejectButton"
                    Content="Xác nhận từ chối"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"
                    Padding="8,4"
                    Click="ConfirmReject_Click"
                    Background="#D32F2F"
                    Foreground="White"
                    BorderThickness="0"
                    Width="150"
                    FontWeight="Bold"
                    Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>
