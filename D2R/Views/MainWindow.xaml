<Window x:Class="D2R.MainWindow"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2R"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="CanResize"
        WindowState="Normal"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Background="Transparent">
        <Border VerticalAlignment="Top" CornerRadius="8,8,8,8"
                Background="#0077b5">
            <Grid>
                <Viewbox Stretch="UniformToFill">
                    <Grid Width="1920" Height="1080" >

                            <!-- Custom Title Bar -->
                            <Border Height="55" CornerRadius="8,8, 0,0"
                                    VerticalAlignment="Top" Background="#391867" 
                                    MouseDown="Window_MouseDown">
                                <Grid>
                                    <!-- Đặt Grid.ColumnDefinitions lên đầu tiên -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- For Logo -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- For Title -->  
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- For Window Controls -->
                                    </Grid.ColumnDefinitions>
                                
                                    <!-- Logo -->
                                    <Image Source="/D2R_Logo.png" 
                                           Width="55" Height="55"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Top" 
                                           Grid.Column="1"
                                           Stretch="Uniform"/>
                                    <Border Background="#391867" 
                                            CornerRadius="0,8,0,0" 
                                            HorizontalAlignment="Right"
                                            Grid.Column="2">
                                        <!-- Window Control Buttons -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <!-- ~1~ Minimize @1@ -->
                                            <!-- <Button Width="70" Height="55" Click="Minimize_Click"> -->
                                            <!--     <Path Data="M 0,0 L 20,0" Stroke="Black" StrokeThickness="2" -->
                                            <!--           HorizontalAlignment="Center" VerticalAlignment="Center"/> -->
                                            <!-- </Button> -->
                                            <!-- -->
                                            <!-- ~1~ Maximize / Restore @1@ -->
                                            <!-- <Button Width="70" Height="55" Click="MaximizeRestore_Click"> -->
                                            <!--     <Path x:Name="MaximizeIcon" Data="M 0,0 L 0,20 L 20,20 L 20,0 Z" -->
                                            <!--           Stroke="Black" StrokeThickness="2" -->
                                            <!--           HorizontalAlignment="Center" VerticalAlignment="Center"/> -->
                                            <!-- </Button> -->
                                            <!-- -->
                                            <!-- ~1~ Close @1@ -->
                                            <!-- <Button Width="70" Height="55" Click="Close_Click"> -->
                                            <!--     <Path Data="M 0,0 L 20,20 M 20,0 L 0,20" Stroke="Black" StrokeThickness="2" -->
                                            <!--           HorizontalAlignment="Center" VerticalAlignment="Center"/> -->
                                            <!-- </Button> -->
                                            
                                            <Button Width="70" Height="55" Click="Minimize_Click"
                                                    Background="Transparent" Foreground="White" BorderThickness="0"
                                                    MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                                                <Path Data="M 0,0 L 20,0" Stroke="White" StrokeThickness="2"
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Button>
                                            
                                            <Button Width="70" Height="55" Click="MaximizeRestore_Click"
                                                    Background="Transparent" Foreground="White" BorderThickness="0"
                                                    MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                                                <Path x:Name="MaximizeIcon" Data="M 0,0 L 0,20 L 20,20 L 20,0 Z"
                                                      Stroke="White" StrokeThickness="2"
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Button>
                                            
                                            <Button Width="70" Height="55" Click="Close_Click"
                                                    Background="Transparent" Foreground="White" BorderThickness="0"
                                                    MouseEnter="CloseButton_MouseEnter" MouseLeave="CloseButton_MouseLeave">
                                                <Path Data="M 0,0 L 20,20 M 20,0 L 0,20" Stroke="White" StrokeThickness="2"
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="0,8,0,0"
                                                                Padding="0">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            
                                        </StackPanel>
                                    </Border>
                                    <!-- Title -->
                                    <TextBlock Grid.Column="1" Text="HỆ THỐNG QUẢN LÝ VÀ CỨU TRỢ THIÊN TAI" 
                                       VerticalAlignment="Center" HorizontalAlignment="Left"
                                       FontSize="35" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI" Margin="60,0,0,0"/>
                                </Grid>
                            </Border>


                            <!-- Main Content -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1330"/>
                                    <!-- Left side for text -->
                                    <ColumnDefinition Width="590"/>
                                    <!-- Right side for white content area -->
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="#B39DDB" Margin="0,55,0,0" Grid.Column="0"/>
                                <Rectangle Fill="White" Margin="0,55,0,0" Grid.Column="1"/>
                                <Image Source="/D2R_Logo.png" Margin="46,91,48,733" Grid.Column="1"/>
                                <!-- Left Side: Text -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="1"/>

                                <Label Content="🌀 Ứng dụng quản lý và cứu trợ thiên tai" 
                                    FontSize="50"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="167,310,0,0"/>
                                <TextBlock 
                                    Text="Hệ thống hỗ trợ quản lý thông tin, điều phối cứu trợ và giúp đỡ người dân trong thiên tai một cách nhanh chóng, hiệu quả."
                                    FontSize="40"
                                    FontStyle="Italic"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    TextWrapping="Wrap"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="55,687,0,0" Width="1204"/>
                                <!-- Right Side: White Content Area -->
                                <Grid Grid.Column="1">
                                    <Image Source="/D2R_Logo.png" Margin="0,-977,1719,0" Grid.ColumnSpan="2"/>
                                    <TextBlock 
                                        Text="Chào mừng bạn đến với ứng dụng của chúng tôi!"
                                        FontWeight="Bold"
                                        FontSize="24"
                                        TextWrapping="NoWrap"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        TextAlignment="Center"
                                        Margin="12,865,0,0" Width="570" Height="54"/>
                                    <TextBlock  
                                        Text="Đăng nhập ngay để có trải nghiệm an toàn và tiện lợi."
                                        FontSize="20"
                                        TextWrapping="Wrap"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Center"
                                        TextAlignment="Center"
                                        FontStyle="Italic" Width="570" Height="54" Margin="0,901,0,0"/>
                                    <GroupBox Header="Thông tin đăng nhập"
                                        FontWeight="Bold"
                                        FontSize="25"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Width="516" Height="452" Margin="41,350,0,0">
                                        <Grid Margin="20">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Username Label -->
                                            <Label Content="Tên đăng nhập:" Grid.Column="0"
                                                     VerticalAlignment="Top"
                                                     Margin="69,10,68,0" Grid.ColumnSpan="2" Height="52"/>
                                            <!-- Username TextBox -->
                                            <TextBox Name="UsernameTextBox"
                                                    Grid.Row="0"
                                                     Margin="75,67,62,11" Grid.ColumnSpan="2"/>

                                            <!-- Password Label -->
                                            <Label Content="Mật khẩu:"
                                                   VerticalAlignment="Top"
                                                   Margin="63,29,73,0" Grid.ColumnSpan="2" Grid.Row="1"/>
                                            <!-- PasswordBox -->
                                            <PasswordBox Name="PasswordBox"
                                                         Grid.Row="2"
                                                         Margin="71,11,62,11" Grid.ColumnSpan="2"/>

                                            <!-- Forgot Password Button -->
                                            <Button Content="Quên mật khẩu?"
                                                Grid.Row="3"
                                                HorizontalAlignment="Right"
                                                Margin="0,45,98,-22"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                Foreground="Blue"
                                                Cursor="Hand"
                                                FontStyle="Italic"
                                                Click="ForgotPassword_Click" Width="301" Grid.ColumnSpan="2"/>

                                            <!-- Login Button -->
                                            <Button Name="LoginButton"
                                                Click="LoginButton_Click"
                                                Content="Đăng nhập"
                                                Grid.Row="3" Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                Margin="1,10,0,10"
                                                Width="120"
                                                Height="35"/>
                                        </Grid>
                                    </GroupBox>

                                </Grid>
                            </Grid>

                            <materialDesign:Card
                                FontSize="95"
                                Padding="8"
                                Background="#581FA1"
                                Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                UniformCornerRadius="6" Margin="48,392,652,411">
                                <TextBlock
                                    FontSize="169"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    TextWrapping="NoWrap"
                                    VerticalAlignment="Top"    
                                    Margin="30,12,4,0" Height="257"><Run Text="ACEOFSPADES" TextDecorations="Underline"/>
                                </TextBlock>
                            </materialDesign:Card>
                        </Grid>
                </Viewbox>
                
                <Grid>
                    <Thumb Width="5" HorizontalAlignment="Left" Background="#00000000" Cursor="SizeWE" DragDelta="ResizeLeft" Opacity="0"/>
                    <Thumb Width="5" HorizontalAlignment="Right" Background="#00000000" Cursor="SizeWE" DragDelta="ResizeRight" Opacity="0"/>
                    <Thumb Height="5" VerticalAlignment="Top" Background="#00000000" Cursor="SizeNS" DragDelta="ResizeTop" Opacity="0"/>
                    <Thumb Height="5" VerticalAlignment="Bottom" Background="#00000000" Cursor="SizeNS" DragDelta="ResizeBottom" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#00000000" Cursor="SizeNWSE" DragDelta="ResizeTopLeft" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#00000000" Cursor="SizeNESW" DragDelta="ResizeTopRight" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="#00000000" Cursor="SizeNESW" DragDelta="ResizeBottomLeft" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#00000000" Cursor="SizeNWSE" DragDelta="ResizeBottomRight" Opacity="0"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>