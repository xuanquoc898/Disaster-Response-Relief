<Page x:Class="D2R.Views.MenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Hệ thống Quản Lý Cứu Trợ Thiên Tai"
      Background="White" MinWidth="800" MinHeight="600">

    <Page.Resources>
        <!-- Blood Red Color Resources -->
        <Color x:Key="PrimaryBloodRed">#8B0000</Color>
        <Color x:Key="DarkBloodRed">#660000</Color>
        <Color x:Key="LightBloodRed">#A52A2A</Color>
        <Color x:Key="VeryLightBloodRed">#FFE4E1</Color>

        <!-- SolidColorBrush Resources -->
        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="{StaticResource PrimaryBloodRed}"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="{StaticResource DarkBloodRed}"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="{StaticResource LightBloodRed}"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="{StaticResource VeryLightBloodRed}"/>

        <!-- Nút lớn bo tròn -->
        <Style x:Key="BigRoundedButton" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignRaisedDarkButton}">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="0,10"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowAnimationDuration" Value="0:0:0.0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="35"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Header -->
            <Grid Height="55" VerticalAlignment="Top" Background="{StaticResource PrimaryBloodRedBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Source="/D2R_Logo.png" Height="40" Margin="20,0" VerticalAlignment="Center"/>

                <!-- Title -->
                <TextBlock Text="HỆ THỐNG QUẢN LÝ VÀ CỨU TRỢ THIÊN TAI"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         FontSize="26"
                         FontWeight="Bold"
                         Foreground="White"
                         FontFamily="Segoe UI"
                         Grid.Column="1"/>

                <!-- Window Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Style="{StaticResource MaterialDesignToolButton}">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignToolButton}">
                        <materialDesign:PackIcon Kind="WindowMaximize" Width="16" Height="16" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignToolButton}">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Layout -->
            <Grid Margin="0,55,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <!-- Sidebar -->
                    <ColumnDefinition Width="*"/>
                    <!-- Main content -->
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <StackPanel Background="{StaticResource LightBloodRedBrush}" Grid.Column="0" Margin="0,0,10,0">
                    <Button Height="50" Margin="0,45" Background="Red" Foreground="White"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Page}}" Click="Button_Click">
                        <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </Button>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Yêu cầu cứu trợ" Margin="0,-20,0,0"/>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Quản lý tài khoản người dùng" Margin="0,10"/>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Quản lý Mạnh Thường Quân" Margin="0,10"/>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Quản lý kho" Margin="0,10"/>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Phân phối hàng hóa" Margin="0,10"/>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Thống kê - Báo cáo" Margin="0,10"/>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Cài đặt" Margin="0,10"/>
                    <Button FontSize="20" Style="{StaticResource BigRoundedButton}" Content="Đăng xuất" Margin="0,10" Height="70"/>
                </StackPanel>

                <!-- Main Content Area -->
                <Grid Grid.Column="1" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Margin="56,84,0,0">
                        <TextBlock Margin="-14,-63,34,801" FontSize="50" Height="107" 
                                FontWeight="Bold"
                                FontStyle="Italic"
                                Background="{StaticResource PrimaryBloodRedBrush}"
                                Foreground="White"
                                Text="Chào mừng bạn đến với trang chủ của hệ thống."
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Page}}"/>
                    </Grid>

                    <Label Content="🌀 Ứng dụng quản lý và cứu trợ thiên tai" 
                         FontSize="40"
                         FontWeight="Bold"
                         Foreground="{StaticResource PrimaryBloodRedBrush}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="346,767,0,0" Height="109" Width="979"/>

                    <Image Source="/D2R_Logo.png" Margin="4,174,6,263"/>

                    <TextBlock
                            FontSize="30"
                            FontStyle="Italic"
                            Foreground="{StaticResource PrimaryBloodRedBrush}"
                            TextWrapping="Wrap"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="284,841,0,0" Width="1186"><Run Text="Sự vĩ đại không nằm trong tài sản, quyền lực, danh vọng hay tiếng tăm."/><LineBreak/><Run Text=" Nó được phát hiện trong lòng tốt, sự nhún nhường, sự phụng sự và tính cách."/></TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
