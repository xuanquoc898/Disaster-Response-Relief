<Window x:Class="D2R.Views.DonorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Mạnh Thường Quân" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Khu vực thêm mạnh thường quân -->
        <GroupBox Header="Thêm Mạnh Thường Quân" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="20" Height="353">
            <StackPanel Width="1774">

                <Grid Margin="0 5" Width="1683">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>

                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Họ tên -->
                    <Label Content="Họ tên:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="5" Width="1000"/>

                    <!-- Email -->
                    <Label Content="Email:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="5" Width="1000"/>

                    <!-- SĐT -->
                    <Label Content="SĐT:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPhone" Grid.Row="2" Grid.Column="1" Margin="5" Width="1000"/>

                    <!-- Địa chỉ -->
                    <Label Content="Địa chỉ:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtAddress" Grid.Row="3" Grid.Column="1" Margin="264,5,0,5" Width="1000" HorizontalAlignment="Left"/>

                    <!-- Ngày đăng ký -->
                    <Label Content="Ngày đăng ký:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDatesignup" Grid.Row="4" Grid.Column="1" Margin="264,5,0,5" Width="1000" HorizontalAlignment="Left"/>
                </Grid>

                <!-- Nút Thêm -->
                <Button Content="Thêm Mạnh Thường Quân"
                Width="406"
                Height="40"
                FontSize="20"
                HorizontalAlignment="Center"
                />
            </StackPanel>
        </GroupBox>


        <!-- Danh sách mạnh thường quân -->
        <GroupBox Header="Danh sách Mạnh Thường Quân tạo mới thành công"
                  FontWeight="Bold" FontSize="20"
                  Margin="0,6,5,-1"
                  Grid.Row="1">
            <DataGrid x:Name="dgDonors"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,11,0,-1" FontSize="20">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="2*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="3*"/>
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Phone}" Width="2*"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="3*"/>
                    <DataGridTextColumn Header="Ngày đăng ký" Binding="{Binding JoinDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
