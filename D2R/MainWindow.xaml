<Window x:Class="D2R.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:D2R.Views"
        xmlns:vm="clr-namespace:D2R.ViewModels"
        xmlns:local="clr-namespace:D2R"
        mc:Ignorable="d"
        WindowState="Normal"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">
    <Grid>
        <!-- <local:MainWindow></local:MainWindow> -->
        <Border CornerRadius="8,8,8,8">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- For Title -->
                        <RowDefinition Height="Auto"/>
                        <!-- For Content -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Custom Title Bar -->
                    <Border Height="40" CornerRadius="8,8, 0,0"
                            VerticalAlignment="Top" Background="#8B0000" Grid.Row="0">
                        <Grid>
                            <!-- Đặt Grid.ColumnDefinitions lên đầu tiên -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- For Logo -->
                                <ColumnDefinition Width="*"/>
                                <!-- For Title -->  
                                <ColumnDefinition Width="Auto"/>
                                <!-- For Window Controls -->
                            </Grid.ColumnDefinitions>
                        
                            <!-- Logo -->
                            <Border Grid.Column="0" CornerRadius="20,0,0,0"
                                    Width="40" Height="40"
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top"
                                    ClipToBounds="True">
                                <Image Source="/D2R_Logo.png"
                                       Stretch="UniformToFill"/>
                            </Border>
                            
                            <Border Background="#8B0000" 
                                    CornerRadius="0,8,0,0" 
                                    HorizontalAlignment="Right"
                                    Grid.Column="2">
                                <!-- Window Control Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Width="50" Height="40" Click="Minimize_Click"
                                            Background="Transparent" Foreground="White" BorderThickness="0"
                                            MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                                        <Path Data="M 0,0 L 15,0" Stroke="White" StrokeThickness="2"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Button>
                                    
                                    <Button Width="50" Height="40" Click="MaximizeRestore_Click"
                                            Background="Transparent" Foreground="White" BorderThickness="0"
                                            MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                                        <Path x:Name="MaximizeIcon" Data="M 0,0 L 0,15 L 15,15 L 15,0 Z"
                                              Stroke="White" StrokeThickness="2"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Button>
                                    
                                    <Button Width="50" Height="40" Click="Close_Click"
                                            Background="Transparent" Foreground="White" BorderThickness="0"
                                            MouseEnter="CloseButton_MouseEnter" MouseLeave="CloseButton_MouseLeave">
                                        <Path Data="M 0,0 L 15,15 M 15,0 L 0,15" Stroke="White" StrokeThickness="2"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="0,8,0,0"
                                                        Padding="0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    
                                </StackPanel>
                            </Border>
                            <!-- Title -->
                            <TextBlock Grid.Column="1" Text="HỆ THỐNG QUẢN LÝ VÀ CỨU TRỢ THIÊN TAI" 
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               FontSize="16" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI" Margin="50,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- <views:MainWindow/> -->
                    
                    
                    <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
                        <!-- <views:MainLayout/> -->
                        <!-- <views:LoginView/> -->
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                                <views:LoginView/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type views:MainLayout}">
                                <views:MainLayout/>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </Grid>
                
                <Grid>
                    <Thumb Width="5" HorizontalAlignment="Left" Background="#00000000" Cursor="SizeWE" DragDelta="ResizeLeft" Opacity="0"/>
                    <Thumb Width="5" HorizontalAlignment="Right" Background="#00000000" Cursor="SizeWE" DragDelta="ResizeRight" Opacity="0"/>
                    <Thumb Height="5" VerticalAlignment="Top" Background="#00000000" Cursor="SizeNS" DragDelta="ResizeTop" Opacity="0"/>
                    <Thumb Height="5" VerticalAlignment="Bottom" Background="#00000000" Cursor="SizeNS" DragDelta="ResizeBottom" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#00000000" Cursor="SizeNWSE" DragDelta="ResizeTopLeft" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#00000000" Cursor="SizeNESW" DragDelta="ResizeTopRight" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="#00000000" Cursor="SizeNESW" DragDelta="ResizeBottomLeft" Opacity="0"/>
                    <Thumb Width="5" Height="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#00000000" Cursor="SizeNWSE" DragDelta="ResizeBottomRight" Opacity="0"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
