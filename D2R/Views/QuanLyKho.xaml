<UserControl x:Class="D2R.Views.QuanLyKho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="White">

    <UserControl.Resources>
        <!-- Sử dụng lại các tài nguyên màu từ MenuView -->
        <Color x:Key="PrimaryBloodRed">#8B0000</Color>
        <Color x:Key="DarkBloodRed">#660000</Color>
        <Color x:Key="LightBloodRed">#A52A2A</Color>
        <Color x:Key="VeryLightBloodRed">#FFE4E1</Color>

        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="{StaticResource PrimaryBloodRed}"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="{StaticResource DarkBloodRed}"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="{StaticResource LightBloodRed}"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="{StaticResource VeryLightBloodRed}"/>

        <!-- Style cho nút lớn -->
        <Style x:Key="ImportButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="0,20"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#33000000"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Header -->
        <Border Background="{StaticResource PrimaryBloodRedBrush}" Height="80" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <materialDesign:PackIcon Kind="PackageDown" Foreground="White" Width="40" Height="40" Margin="0,0,15,0"/>
                <TextBlock Text="QUẢN LÝ KHO" 
                         Foreground="White" 
                         FontSize="28" 
                         FontWeight="Bold"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Thông tin chung -->

            <!-- Các lựa chọn nhập kho -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="MỜI NHẤP LỰA CHỌN CỦA BẠN" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBloodRedBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <WrapPanel HorizontalAlignment="Center">
                    <!-- Cột 1 -->
                    <StackPanel Margin="20,0">
                        <Button Content="NHẬP KHO TỪ VIỆN TRỢ" 
                                Style="{StaticResource ImportButtonStyle}"
                                Click="DonationImport_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="HandHeart" Width="30" Height="30" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button Content="NHẬP KHO MUA SẮM" 
                                Style="{StaticResource ImportButtonStyle}"
                                Click="PurchaseImport_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Cart" Width="30" Height="30" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>

                    <!-- Cột 2 -->
                    <StackPanel Margin="20,0">
                        <Button Content="XUẤT KHO CỨU TRỢ" 
                                Style="{StaticResource ImportButtonStyle}"
                                Click="TransferImport_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Truck" Width="30" Height="30" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button Content="KIỂM KÊ HÀNG TỒN KHO" 
                                Style="{StaticResource ImportButtonStyle}"
                                Click="OtherImport_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="DotsHorizontal" Width="30" Height="30" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <!-- Phần Footer đã sửa -->
        <Border Height="60" VerticalAlignment="Top" Margin="0,469,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- Nút Quay Lại -->
                <Button Content="QUAY LẠI" 
                Width="120" 
                Height="40"
                Margin="0,0,10,0"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Foreground="{StaticResource PrimaryBloodRedBrush}"
                BorderBrush="{StaticResource PrimaryBloodRedBrush}"
                Click="BackButton_Click"/>

                <!-- Nút Tiếp Theo -->
                <Button Content="TIẾP THEO" 
                Width="120" 
                Height="40"
                Foreground="White"
                Background="{StaticResource PrimaryBloodRedBrush}"
                IsEnabled="False"
                x:Name="NextButton"
                Click="NextButton_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Width" Value="120"/>
                            <Setter Property="Height" Value="40"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="{StaticResource LightBloodRedBrush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource VeryLightBloodRedBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="#33000000"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>