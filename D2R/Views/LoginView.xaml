<UserControl x:Class="D2R.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2R"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="White">
    <Grid >
        <Border VerticalAlignment="Top" CornerRadius="8,8,8,8">
            <Grid>
                <Viewbox Stretch="UniformToFill">
                    <Grid Width="1920" Height="1080" >
                            <!-- Main Content -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1330"/>
                                    <!-- Left side for text -->
                                    <ColumnDefinition Width="590"/>
                                    <!-- Right side for white content area -->
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="#FF3E3E" Margin="0,0,0,0" Grid.Column="0"/>
                                <Rectangle Fill="White" Margin="0,0,0,0" Grid.Column="1"/>
                                <Image Source="/D2R_Logo.png" Margin="46,91,48,733" Grid.Column="1"/>
                                <!-- Left Side: Text -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="1"/>

                                <Label Content="Ứng dụng quản lý và cứu trợ thiên tai" 
                                    FontSize="50"
                                    FontWeight="Bold"
                                    Foreground="#821919"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="167,310,0,0"/>
                                <TextBlock 
                                    Text="Hệ thống hỗ trợ quản lý thông tin, điều phối cứu trợ và giúp đỡ người dân trong thiên tai một cách nhanh chóng, hiệu quả."
                                    FontSize="40"
                                    FontStyle="Italic"
                                    FontWeight="Bold"
                                    Foreground="#821919"
                                    TextWrapping="Wrap"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="55,687,0,0" Width="1204"/>
                                <!-- Right Side: White Content Area -->
                                <Grid Grid.Column="1">
                                    <Image Source="/D2R_Logo.png" Margin="0,-977,1719,0" Grid.ColumnSpan="2"/>
                                    <TextBlock 
                                        Text="Chào mừng bạn đến với ứng dụng của chúng tôi!"
                                        FontWeight="Bold"
                                        FontSize="24"
                                        TextWrapping="NoWrap"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        TextAlignment="Center"
                                        Margin="12,865,0,0" Width="570" Height="54"/>
                                    <TextBlock  
                                        Text="Đăng nhập ngay để có trải nghiệm an toàn và tiện lợi."
                                        FontSize="20"
                                        TextWrapping="Wrap"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Center"
                                        TextAlignment="Center"
                                        FontStyle="Italic" Width="570" Height="54" Margin="0,900,0,0"/>
                                    <GroupBox Header="Thông tin đăng nhập"
                                        FontWeight="Bold"
                                        FontSize="25"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Width="516" Height="452" Margin="40,350,0,0">
                                        <Grid Margin="20">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Username Label -->
                                            <Label Content="Tên đăng nhập:" Grid.Column="0"
                                                 VerticalAlignment="Top"
                                                 Margin="69,10,68,0" 
                                                 Grid.ColumnSpan="2" Height="52"/>
                                            <!-- Username TextBox -->
                                            <TextBox Name="UsernameTextBox"
                                                Grid.Row="0"
                                                Margin="75,67,62,11"
                                                Text="{Binding Username}"
                                                Grid.ColumnSpan="2"/>

                                            <!-- Password Label -->
                                            <Label Content="Mật khẩu:"
                                                   VerticalAlignment="Top"
                                                   Margin="63,29,73,0" Grid.ColumnSpan="2" Grid.Row="1"/>
                                            <!-- PasswordBox -->
                                            <PasswordBox Name="PasswordBox"
                                                         Grid.Row="2" PasswordChanged="PasswordBox_PasswordChanged"
                                                         Margin="71,11,62,11" Grid.ColumnSpan="2"/>

                                            <!-- Forgot Password Button -->
                                            <Button Content="Quên mật khẩu?"
                                                Grid.Row="3"
                                                HorizontalAlignment="Right"
                                                Margin="0,45,98,-22"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                Foreground="Blue"
                                                Cursor="Hand"
                                                FontStyle="Italic"
                                                Width="301" Grid.ColumnSpan="2"/>

                                            <!-- Login Button -->
                                            <Button Name="LoginButton"
                                                Content="Đăng nhập"
                                                Command="{Binding LoginCommand}"
                                                Grid.Row="3" Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                Margin="1,10,0,10"
                                                Width="120"
                                                Height="35"/>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </Grid>

                            <materialDesign:Card
                                FontSize="95"
                                Padding="8"
                                Background="#321919"
                                Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                UniformCornerRadius="6" Margin="48,392,652,411">
                                <TextBlock
                                    FontSize="169"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    TextWrapping="NoWrap"
                                    FontStyle="Italic"
                                    VerticalAlignment="Top"    
                                    Margin="30,12,4,0" Height="257"><Run Text="ACEOFSPADES" TextDecorations="Underline"/>
                                </TextBlock>
                            </materialDesign:Card>
                        </Grid>
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</UserControl>