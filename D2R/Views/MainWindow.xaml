<Window x:Class="D2R.MainWindow"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2R"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Hệ thống Quản Lý Cứu Trợ Thiên Tai" 
        Height="1080" 
        Width="1920"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow" 
        ResizeMode="CanResizeWithGrip">

    <Grid>
        <!-- Custom Title Bar -->
        <Grid Height="55" VerticalAlignment="Top" Background="#391867">
            <!-- Đặt Grid.ColumnDefinitions lên đầu tiên -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- For Logo -->
                <ColumnDefinition Width="*"/>
                <!-- For Title -->
                <ColumnDefinition Width="Auto"/>
                <!-- For Window Controls -->
            </Grid.ColumnDefinitions>

            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16" />
                </Button>
                <Button Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="WindowMaximize" Width="16" Height="16" />
                </Button>
                <Button Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16" />
                </Button>
            </StackPanel>

            <!-- Logo -->
            <Image Source="/D2R_Logo.png" Margin="-74,0,1719,0" Grid.ColumnSpan="2"/>

            <!-- Title -->
            <TextBlock Grid.Column="1" Text="HỆ THỐNG QUẢN LÝ VÀ CỨU TRỢ THIÊN TAI" 
               VerticalAlignment="Center" HorizontalAlignment="Left"
               FontSize="35" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI" Width="1750" Margin="70,0,0,0"/>
        </Grid>


        <!-- Main Content -->
        <Grid Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1330"/>
                <!-- Left side for text -->
                <ColumnDefinition Width="590"/>
                <!-- Right side for white content area -->
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#B39DDB" Margin="0,55,0,0" Grid.Column="0"/>
            <Rectangle Fill="White" Margin="0,55,0,0" Grid.Column="1"/>
            <Image Source="/D2R_Logo.png" Margin="46,91,48,733" Grid.Column="1"/>
            <!-- Left Side: Text -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="1"/>

            <Label Content="🌀 Ứng dụng quản lý và cứu trợ thiên tai" 
                FontSize="50"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="167,310,0,0"/>
            <TextBlock 
                Text="Hệ thống hỗ trợ quản lý thông tin, điều phối cứu trợ và giúp đỡ người dân trong thiên tai một cách nhanh chóng, hiệu quả."
                FontSize="40"
                FontStyle="Italic"
                FontWeight="Bold"
                Foreground="White"
                TextWrapping="Wrap"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="55,687,0,0" Width="1204"/>
            <!-- Right Side: White Content Area -->
            <Grid Grid.Column="1">
                <Image Source="/D2R_Logo.png" Margin="0,-977,1719,0" Grid.ColumnSpan="2"/>
                <TextBlock 
                    Text="Chào mừng bạn đến với ứng dụng của chúng tôi!"
                    FontWeight="Bold"
                    FontSize="24"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    TextAlignment="Center"
                    
                    Margin="12,865,0,0" Width="570" Height="54"
/>
                <TextBlock  
                    Text="Đăng nhập ngay để có trải nghiệm an toàn và tiện lợi."
                    FontSize="20"
                    TextWrapping="Wrap"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    FontStyle="Italic" Width="570" Height="54" Margin="0,901,0,0"/>
                <GroupBox Header="Thông tin đăng nhập"
                    FontWeight="Bold"
                    FontSize="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="516" Height="452" Margin="41,350,0,0">


                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Username Label -->
                        <Label Content="Tên đăng nhập:" Grid.Column="0"
                                 VerticalAlignment="Top"
                                 Margin="69,10,68,0" Grid.ColumnSpan="2" Height="52"/>
                        <!-- Username TextBox -->
                        <TextBox Name="UsernameTextBox"
                                Grid.Row="0"
                                 Margin="75,67,62,11" Grid.ColumnSpan="2"/>

                        <!-- Password Label -->
                        <Label Content="Mật khẩu:"
                               VerticalAlignment="Top"
                               Margin="63,29,73,0" Grid.ColumnSpan="2" Grid.Row="1"/>
                        <!-- PasswordBox -->
                        <PasswordBox Name="PasswordTe"
                                     Grid.Row="2"
                                     Margin="71,11,62,11" Grid.ColumnSpan="2"/>

                        <!-- Forgot Password Button -->
                        <Button Content="Quên mật khẩu?"
                Grid.Row="3"
                HorizontalAlignment="Right"
                Margin="0,45,98,-22"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="Blue"
                Cursor="Hand"
                FontStyle="Italic"
                Click="ForgotPassword_Click" Width="301" Grid.ColumnSpan="2"/>

                        <!-- Login Button -->
                        <Button Name="LoginButton"
                Content="Đăng nhập"
                Grid.Row="3" Grid.Column="1"
                HorizontalAlignment="Left"
                Margin="1,10,0,10"
                Width="120"
                Height="35"/>
                    </Grid>
                </GroupBox>

            </Grid>
        </Grid>

        <materialDesign:Card
                FontSize="95"
                Padding="8"
                Background="#581FA1"
                Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                UniformCornerRadius="6" Margin="48,392,652,411"
 >
            <TextBlock
                    FontSize="169"
                    FontWeight="Bold"
                    Foreground="White"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Top"    
                     Margin="30,12,4,0" Height="257"><Run Text="ACEOFSPADES" TextDecorations="Underline"/></TextBlock>
        </materialDesign:Card>
    </Grid>


</Window>