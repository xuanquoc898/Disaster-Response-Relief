<UserControl x:Class="D2R.Views.ViewReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="White"
      d:DesignHeight="800" d:DesignWidth="1200">

    <!-- Resources (giữ nguyên) -->
    <UserControl.Resources>
        <!-- Màu sắc -->
        <Color x:Key="PrimaryBloodRed">#8B0000</Color>
        <Color x:Key="DarkBloodRed">#660000</Color>
        <Color x:Key="LightBloodRed">#A52A2A</Color>
        <Color x:Key="VeryLightBloodRed">#FFE4E1</Color>
        <Color x:Key="FooterPink">#FFDAD4</Color>

        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="{StaticResource PrimaryBloodRed}"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="{StaticResource DarkBloodRed}"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="{StaticResource LightBloodRed}"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="{StaticResource VeryLightBloodRed}"/>
        <SolidColorBrush x:Key="FooterPinkBrush" Color="{StaticResource FooterPink}"/>

        <!-- Style cho các control -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>

        <Style x:Key="SettingItemStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>

        <Style x:Key="SettingLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0 0 0 2"/>
        </Style>

        <Style x:Key="SettingComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>

        <Style x:Key="SettingCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="5"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBloodRedBrush}" Height="80">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <materialDesign:PackIcon Kind="ChartBar" Foreground="White" Width="32" Height="32" Margin="0,0,15,0"/>
                <TextBlock Text="XEM BÁO CÁO" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Bộ lọc báo cáo -->
                <Border Background="{StaticResource VeryLightBloodRedBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Loại báo cáo:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"  FontStyle="Italic" SelectedIndex="0" Margin="0,0,0,10">
                            <ComboBoxItem Content="Báo cáo doanh thu"/>
                            <ComboBoxItem Content="Báo cáo tồn kho"/>
                            <ComboBoxItem Content="Báo cáo khách hàng"/>
                        </ComboBox>
                        <Button Grid.Row="0" Grid.Column="2" Content="Tải báo cáo" Margin="10,0,0,10"
                                Style="{StaticResource ActionButtonStyle}" Width="150"/>

                        <TextBlock Text="Khoảng thời gian:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" Margin="0,0,10,0" Width="150" HorizontalAlignment="Left"/>
                        <TextBlock Text="đến" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="160,0,10,0"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" Margin="190,0,0,0" Width="150" HorizontalAlignment="Left"/>
                    </Grid>
                </Border>

                <!-- Hiển thị báo cáo -->
                <Border BorderBrush="{StaticResource PrimaryBloodRedBrush}" BorderThickness="1" CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="{StaticResource PrimaryBloodRedBrush}" CornerRadius="8,8,0,0" Padding="10">
                            <TextBlock Text="BÁO CÁO DOANH THU " 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="STT" Width="Auto" Binding="{Binding STT}"/>
                                <DataGridTextColumn Header="Sản phẩm" Width="*" Binding="{Binding SanPham}"/>
                                <DataGridTextColumn Header="Số lượng" Width="Auto" Binding="{Binding SoLuong}"/>
                                <DataGridTextColumn Header="Doanh thu" Width="Auto" Binding="{Binding DoanhThu}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource VeryLightBloodRedBrush}" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="QUAY LẠI" Style="{StaticResource ActionButtonStyle}" Click="BackButton_Click"/>
                <Button Content="XUẤT BÁO CÁO" Style="{StaticResource ActionButtonStyle}" Margin="15,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>