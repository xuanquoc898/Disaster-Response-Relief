<Page x:Class="D2R.Views.NhapKhoMuaSam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Nhập Kho Mua Sắm"
      Background="White"
      d:DesignHeight="800" d:DesignWidth="1200">

    <Page.Resources>
        <!-- Màu sắc -->
        <Color x:Key="PrimaryBloodRed">#8B0000</Color>
        <Color x:Key="DarkBloodRed">#660000</Color>
        <Color x:Key="LightBloodRed">#A52A2A</Color>
        <Color x:Key="VeryLightBloodRed">#FFE4E1</Color>

        <SolidColorBrush x:Key="PrimaryBloodRedBrush" Color="{StaticResource PrimaryBloodRed}"/>
        <SolidColorBrush x:Key="DarkBloodRedBrush" Color="{StaticResource DarkBloodRed}"/>
        <SolidColorBrush x:Key="LightBloodRedBrush" Color="{StaticResource LightBloodRed}"/>
        <SolidColorBrush x:Key="VeryLightBloodRedBrush" Color="{StaticResource VeryLightBloodRed}"/>

        <!-- Style cho nút thông thường -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#33000000"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource LightBloodRedBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource VeryLightBloodRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút icon -->
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="25"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBloodRedBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#33000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource LightBloodRedBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource VeryLightBloodRedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBloodRedBrush}"/>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBloodRedBrush}"/>
        </Style>

        <!-- Style cho GroupBox -->
        <Style x:Key="CustomGroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignGroupBox}">
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBloodRedBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" 
                                    Background="{StaticResource PrimaryBloodRedBrush}" 
                                    CornerRadius="4,4,0,0" 
                                    Padding="5">
                                <TextBlock Text="{TemplateBinding Header}" 
                                           Foreground="White" 
                                           FontWeight="Bold" 
                                           FontSize="14"/>
                            </Border>
                            <Border Grid.Row="1" 
                                    BorderBrush="{StaticResource PrimaryBloodRedBrush}" 
                                    BorderThickness="1,0,1,1" 
                                    CornerRadius="0,0,4,4" 
                                    Background="{StaticResource VeryLightBloodRedBrush}">
                                <ContentPresenter Margin="10"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBloodRedBrush}" Height="80" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <materialDesign:PackIcon Kind="Cart" Foreground="White" Width="40" Height="40" Margin="0,0,15,0"/>
                <TextBlock Text="NHẬP KHO MUA" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Thông tin chung -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,12,0,28">
                <TextBlock Text="THÔNG TIN MUA SẮM" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBloodRedBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Ngày nhập:" Width="120" VerticalAlignment="Center"/>
                    <DatePicker Width="200" Margin="1" 
                                Style="{StaticResource MaterialDesignDatePicker}"
                                BorderBrush="{StaticResource PrimaryBloodRedBrush}"
                                SelectedDate="{Binding ImportDate}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Mã hóa đơn:" Width="120" VerticalAlignment="Center"/>
                    <TextBox Style="{StaticResource InputTextBoxStyle}" 
                             Text="{Binding InvoiceNumber}"
                             materialDesign:HintAssist.Hint="Nhập mã hóa đơn"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Tổng tiền" Width="120" VerticalAlignment="Center"/>
                    <TextBox Style="{StaticResource InputTextBoxStyle}" 
                             Text="{Binding TotalPurchasePrice}"
                             materialDesign:HintAssist.Hint="Nhập giá mua (VND)"/>
                </StackPanel>
            </StackPanel>

            <!-- Form thêm mục hàng hóa -->
            <GroupBox 
                      Header="Thêm mục hàng hóa" 
                      Style="{StaticResource CustomGroupBoxStyle}" Margin="10,235,10,44" Grid.RowSpan="2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Loại hàng:" Width="100" VerticalAlignment="Center"/>
                        <ComboBox Style="{StaticResource InputComboBoxStyle}" 
                                  ItemsSource="{Binding ItemTypes}"
                                  SelectedItem="{Binding NewItem.Type}"
                                  materialDesign:HintAssist.Hint="Chọn loại hàng"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Số lượng:" Width="100" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                 Text="{Binding NewItem.Quantity}"
                                 materialDesign:HintAssist.Hint="Nhập số lượng"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Đơn vị:" Width="100" VerticalAlignment="Center"/>
                        <ComboBox Style="{StaticResource InputComboBoxStyle}" 
                                  ItemsSource="{Binding Units}"
                                  SelectedItem="{Binding NewItem.Unit}"
                                  materialDesign:HintAssist.Hint="Chọn đơn vị"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Ghi chú:" Width="100" VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                 Text="{Binding NewItem.Note}"
                                 materialDesign:HintAssist.Hint="Ghi chú (nếu có)"/>
                    </StackPanel>
                    <Button Content="THÊM MỤC" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Command="{Binding AddItemCommand}" 
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>

            <!-- Danh sách các mục hàng hóa -->
            <GroupBox Grid.Row="2" 
                      Header="Danh sách hàng hóa" 
                      Style="{StaticResource CustomGroupBoxStyle}">
                <DataGrid ItemsSource="{Binding Items}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Loại hàng" Binding="{Binding Type}" Width="*"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                        <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="100"/>
                        <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" Width="*"/>
                        <DataGridTemplateColumn Header="Xóa" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Xóa" 
                                            Style="{StaticResource MaterialDesignFlatButton}" 
                                            Foreground="{StaticResource PrimaryBloodRedBrush}"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Nút điều khiển -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="LƯU TẤT CẢ" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Command="{Binding SaveAllCommand}"/>
                <Button Content="HỦY" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="{StaticResource LightBloodRedBrush}" 
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Height="60" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- Nút Quay Lại (Icon) -->
                <Button Style="{StaticResource IconButtonStyle}"
                        ToolTip="Quay lại"
                        Click="BackButton_Click">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                </Button>
                <!-- Nút Tiếp Theo (Icon) -->
                <Button x:Name="NextButton" 
                        Style="{StaticResource IconButtonStyle}"
                        ToolTip="Tiếp theo"
                        IsEnabled="False"
                        Click="NextButton_Click">
                    <materialDesign:PackIcon Kind="ArrowRight" Width="24" Height="24"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>