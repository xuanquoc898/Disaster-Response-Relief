<UserControl x:Class="D2R.Views.Users.CampaignCategoryGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">

    <Border Background="#FAFAFA" CornerRadius="6" Padding="20" Margin="10" 
            BorderBrush="#E0E0E0" BorderThickness="1">
        <StackPanel >

            <ComboBox x:Name="CategoryComboBox"
                      Width="Auto"
                      Margin="0"
                      Padding="10"
                      Background="White"
                      BorderBrush="#BDBDBD"
                      BorderThickness="1"
                      DisplayMemberPath="CategoryName"
                      SelectedValuePath="CategoryId"
                      SelectionChanged="CategoryComboBox_SelectionChanged"
                      FontSize="14"
                      Foreground="#333"/>

            <ItemsControl x:Name="ItemEntryPanel"/>

            <Button Content="+ Thêm vật phẩm"
                    Width="160"
                    Height="40"
                    Background="#1976D2"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="AddItemEntry_Click"
                    FontSize="14"
                    Margin="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            Padding="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Color="#55000000"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.04" ScaleY="1.04"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Border>
</UserControl>
