<UserControl x:Class="D2R.Views.UserControls.DonationCategoryGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:D2R.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#F9F9F9" Padding="10" Margin="0 0 0 20">
        <StackPanel>
            <ComboBox x:Name="CategoryComboBox"
                      Width="300"
                      DisplayMemberPath="CategoryName"
                      SelectionChanged="CategoryComboBox_SelectionChanged"
                      Margin="0 0 0 10"/>

            <ItemsControl x:Name="ItemEntryPanel" Margin="0 0 0 10"/>

            <Button Content="+ Thêm vật phẩm"
                    Width="150"
                    Click="AddItemEntry_Click"/>
        </StackPanel>
    </Border>
</UserControl>
